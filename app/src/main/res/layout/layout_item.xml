<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/recycler_item_background"
        android:id="@+id/itemCardView"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_slideshow"
                android:id="@+id/itemImgView"
                tools:layout_editor_absoluteY="83dp"
                tools:layout_editor_absoluteX="2dp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/itemTextView"
                android:layout_gravity="center"
                tools:layout_editor_absoluteY="91dp"
                android:layout_marginStart="15dp"
                app:layout_constraintLeft_toRightOf="@+id/itemImgView"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/itemImgView"
                android:layout_toEndOf="@+id/itemImgView" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>